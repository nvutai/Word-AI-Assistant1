<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="TaskPaneApp">
  <!-- ID duy nhất cho Add-in. Bạn có thể giữ nguyên ID này. -->
  <Id>a1b2c3d4-e5f6-7890-1234-567890abcdef</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <!-- Tên hiển thị của Add-in -->
  <DisplayName DefaultValue="Trợ lý Ngôn ngữ AI"/>
  <!-- Mô tả ngắn gọn -->
  <Description DefaultValue="Phân tích và cải thiện văn bản với sức mạnh của Google Gemini."/>
  <!-- URL đến biểu tượng của Add-in (kích thước 32x32) -->
  <IconUrl DefaultValue="https://placehold.co/32x32/3b82f6/ffffff?text=AI"/>
  <HighResolutionIconUrl DefaultValue="https://placehold.co/80x80/3b82f6/ffffff?text=AI"/>
  <SupportUrl DefaultValue="https://www.your-website.com/help"/>
  <AppDomains>
    <!-- Thêm tên miền của máy chủ API nếu cần (ví dụ: generativelanguage.googleapis.com) -->
    <AppDomain>https://generativelanguage.googleapis.com</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Document"/>
  </Hosts>
  <DefaultSettings>
    <!-- QUAN TRỌNG: Đây là URL đến tệp taskpane.html của bạn. -->
    <SourceLocation DefaultValue="~remoteAppUrl/taskpane.html"/>
  </DefaultSettings>
  <Permissions>ReadWriteDocument</Permissions>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CommandsGroup">
                <Label resid="CommandsGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://placehold.co/16x16/3b82f6/ffffff?text=AI"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://placehold.co/32x32/3b82f6/ffffff?text=AI"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://placehold.co/80x80/3b82f6/ffffff?text=AI"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://www.your-website.com/help"/>
        <!-- QUAN TRỌNG: Thay thế URL này -->
        <bt:Url id="Commands.Url" DefaultValue="~remoteAppUrl/taskpane.html"/>
        <!-- QUAN TRỌNG: Thay thế URL này -->
        <bt:Url id="Taskpane.Url" DefaultValue="~remoteAppUrl/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Bắt đầu với Trợ lý AI!"/>
        <bt:String id="CommandsGroup.Label" DefaultValue="Trợ lý AI"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Mở Trợ lý"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="Add-in của bạn đã được tải thành công. Hãy bắt đầu cải thiện văn bản ngay!"/>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Nhấn để mở Trợ lý Ngôn ngữ AI và phân tích văn bản."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>


